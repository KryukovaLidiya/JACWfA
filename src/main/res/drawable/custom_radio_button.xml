<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true"><shape android:shape="rectangle">
            <corners android:radius="@dimen/button_corner" />

            <padding android:bottom="@dimen/small_padding" android:left="@dimen/small_padding" android:right="@dimen/small_padding" android:top="@dimen/small_padding" />

            <solid android:color="@color/radio_checked" />

            <stroke android:width="1dip" android:color="#000000" />
        </shape></item>
    <item><shape android:shape="rectangle">
            <corners android:radius="@dimen/button_corner" />

            <padding android:bottom="@dimen/small_padding" android:left="@dimen/small_padding" android:right="@dimen/small_padding" android:top="@dimen/small_padding" />

            <solid android:color="@color/radio_unchecked" />

            <stroke android:width="1dip" android:color="#000000" />
        </shape></item>

</selector>